<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.com.mariobird.MainActivity"
    android:background="@drawable/background"
    android:gravity="center">

    <ImageButton
        android:id="@+id/play"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/start"
        android:onClick="StartGame"
        android:text="Hello World!"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/highscore"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/highscore"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/login"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pixels"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:text="@string/log_in"
        android:background="@drawable/connect_button" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-8453977966536256/4556026876"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />

</LinearLayout>